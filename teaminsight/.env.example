# TeamInsight Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# REQUIRED - Database
# ===========================================
# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/teaminsight?retryWrites=true&w=majority

# ===========================================
# REQUIRED - Authentication
# ===========================================
# Secret key for signing team session tokens (generate a random 32+ character string)
TEAM_SESSION_SECRET=your-super-secret-key-at-least-32-characters

# ===========================================
# REQUIRED - AI Integration
# ===========================================
# Cerebras Cloud API key for AI-powered reflections
CEREBRAS_API_KEY=your-cerebras-api-key

# ===========================================
# OPTIONAL - Email Notifications
# ===========================================
# SMTP configuration for sending alert emails
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ===========================================
# OPTIONAL - Application
# ===========================================
# Node environment (development, production, test)
NODE_ENV=development

# Application name for branding
NEXT_PUBLIC_APP_NAME=TeamInsight
